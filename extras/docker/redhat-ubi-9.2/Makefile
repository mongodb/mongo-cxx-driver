		-t mongo-cxx-driver:$(MONGOCXX_VERSION)-redhat-ubi-9.2

.PHONY: nocachebuild
nocachebuild:
	$(DOCKER) build . \
		--no-cache \
		-t mongo-cxx-driver:$(MONGOCXX_VERSION)-redhat-ubi-9.2

.PHONY: run
run:
	$(DOCKER) run --rm -it mongo-cxx-driver:$(MONGOCXX_VERSION)-redhat-ubi-9.2

.PHONY: test
