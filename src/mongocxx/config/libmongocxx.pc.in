prefix=@CMAKE_INSTALL_PREFIX@
includedir=${prefix}/include
libdir=${prefix}/lib

Name: libmongocxx
Description: The MongoDB C++11 Driver Library
URL: http://github.com/mongodb/mongo-cxx-driver
Version: @MONGOCXX_VERSION@
Requires.private: libbson-@LIBBSON_REQUIRED_ABI_VERSION@ >= @LIBBSON_REQUIRED_VERSION@, libmongoc-@LIBMONGOC_REQUIRED_ABI_VERSION@
Requires: libbsoncxx >= @MONGOCXX_VERSION@
Cflags: -I${includedir}/mongocxx/@MONGOCXX_INLINE_NAMESPACE@
Libs: -L${libdir} -lmongocxx
