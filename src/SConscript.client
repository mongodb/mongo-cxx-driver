def makeConfigHDefine(env, subst_key, env_var):
    replacement = "// #undef %s"
    value = env.get(env_var, None)
    if value:
        replacement = "#define %s 1"
    return (subst_key, replacement % env_var)
libEnv.AddMethod(makeConfigHDefine)

